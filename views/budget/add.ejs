<% title="Add Budget" %>
<% layout("./layout/boilerplate") %>

<link rel="stylesheet" href="/css/budgetAdd.css">

<div class="budget-container">
    <div class="page-header">
        <h1><i class="fas fa-bullseye"></i> Create Budget</h1>
        <p class="subtitle">Set spending limits for your expense categories</p>
    </div>
    
    <div class="card budget-form-card">
        <form action="/budget" method="post" class="budget-form">
            <div class="form-group category-group">
                <label for="category">
                    <i class="fas fa-tag"></i> Category
                </label>
                <input type="text" id="category" placeholder="e.g., Food, Transportation, Entertainment" name="category" required>
            </div>
            
            <div class="form-group limit-group">
                <label for="limit">
                    <i class="fas fa-money-bill-wave"></i> Monthly Limit
                </label>
                <div class="input-with-icon">
                    <span class="currency-symbol"></span>
                    <input type="number" id="limit" name="monthlyLimit" step="0.01" min="0" placeholder="0.00" required>
                </div>
            </div>
            <div class="form-group month-group">
                <label for="month">
                    <i class="fas fa-calendar-alt"></i> Month
                </label>
                <input type="month" id="month" name="month" required>
            </div>
            
            <button type="submit" class="btn btn-primary submit-btn">
                <i class="fas fa-plus-circle"></i> Create Budget
            </button>
        </form>
    </div>
    
    <div class="back-link">
        <a href="/expense" class="btn btn-outline">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>